{% extends 'base.html.twig' %}

{% block title %}Info Artista{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <header>
        <div class="px-3 py-2 bg-dark text-white">
            <div class="container">
                <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                    <a href="#" class="navbar-brand d-flex align-items-center">
                        <img class="bi d-block mx-auto mb-1" width="140" height="50" src="{{ asset('/assets/images/spotify.png') }}" />
                    </a>

                    <ul class="nav col-12 col-lg-auto my-2 justify-content-center my-md-0 text-small">
                        <li>
                            <a href="/home" class="nav-link text-secondary">
                                <svg class="bi d-block mx-auto mb-1" width="24" height="24"><use xlink:href="/"></use></svg>
                                Home
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('lanzamientos') }}" class="nav-link text-white">
                                <svg class="bi d-block mx-auto mb-1" width="24" height="24"><use xlink:href="{{ path('lanzamientos') }}"></use></svg>
                                Lanzamientos
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
    <main class="example-wrapper">

        <hr class="featurette-divider">

        <div class="row featurette">
            <div class="col-md-7 order-md-2">
                {% for infoArtista in artista %}
                    <h2 class="featurette-heading">{{ infoArtista.name }}</h2>
                    <p class="lead"><a href="{{ infoArtista.external_url }}" target="_blank">Ir a la página del artista</a></p>
                {% endfor %}
            </div>
            <div class="col-md-3 order-md-1">
                {% for infoArtista in artista %}
                    <svg class="bd-placeholder-img rounded-circle" width="140" height="140" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: 140x140" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="#777"></rect><image xlink:href="{{ infoArtista.image.url }}"/></svg>
                {% endfor %}

            </div>
        </div>
        <hr class="featurette-divider">

        <div class="bd-example">
            <table class="table table-dark table-striped">
                <thead>
                <tr>
                    <th scope="col">Foto</th>
                    <th scope="col">Album</th>
                    <th scope="col">Canción</th>
                </tr>
                </thead>
                <tbody>
                {% for track in data %}
                    <tr>
                        <td> <img class="bi d-block mx-auto mb-1"  src="{{track.image.url }}" /></td>
                        <td>{{ track.name }}</td>
                        <td>{{ track.track }}</td>
                    </tr>
                {% endfor %}

                </tbody>

            </table>
        </div>
    </main>
    <footer class="text-muted py-5">
        <div class="container">
            <p class="float-end mb-1">
                <a href="#">Back to top</a>
            </p>
        </div>
    </footer>
{% endblock %}
